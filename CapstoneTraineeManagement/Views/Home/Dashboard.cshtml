@model CapstoneTraineeManagement.Models.DashboardViewModel

@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
    <h1 class="h2">Dashboard</h1>
</div>

<div class="row">
    <div class="col-md-4 mb-4">
        <div class="card dashboard-card text-white bg-primary h-100">
            <div class="card-body">
                <div>
                    <h5 class="card-title">TOTAL TRAINEES</h5>
                    <h2 class="display-4 fw-bold">@Model.TotalTrainees</h2>
                </div>
                <i class="fas fa-users fa-3x opacity-75"></i>
            </div>
            <a asp-controller="Trainees" asp-action="Index" class="card-footer text-white text-decoration-none">
                <span>View Details</span>
                <i class="fas fa-arrow-circle-right ms-1"></i>
            </a>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card dashboard-card text-white bg-success h-100">
            <div class="card-body">
                <div>
                    <h5 class="card-title">TOTAL PROGRAMS</h5>
                    <h2 class="display-4 fw-bold">@Model.TotalPrograms</h2>
                </div>
                <i class="fas fa-book-open fa-3x opacity-75"></i>
            </div>
            <a asp-controller="Programs" asp-action="Index" class="card-footer text-white text-decoration-none">
                <span>View Details</span>
                <i class="fas fa-arrow-circle-right ms-1"></i>
            </a>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card dashboard-card text-white bg-info h-100">
            <div class="card-body">
                <div>
                    <h5 class="card-title">TOTAL ENROLLMENTS</h5>
                    <h2 class="display-4 fw-bold">@Model.EnrollmentsByProgram.Values.Sum()</h2>
                </div>
                <i class="fas fa-clipboard-list fa-3x opacity-75"></i>
            </div>
            <a asp-controller="Enrollments" asp-action="Index" class="card-footer text-white text-decoration-none">
                <span>View Details</span>
                <i class="fas fa-arrow-circle-right ms-1"></i>
            </a>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h3 class="h5 mb-0">Enrollments by Program</h3>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-striped table-hover mb-0">
                <thead class="thead-dark">
                    <tr>
                        <th class="ps-3">Program Name</th>
                        <th>Number of Enrollments</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.EnrollmentsByProgram.Any())
                    {
                        @foreach (var program in Model.EnrollmentsByProgram)
                        {
                            <tr>
                                <td class="ps-3">@program.Key</td>
                                <td>@program.Value</td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="2" class="text-center p-4">No enrollment data available.</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>