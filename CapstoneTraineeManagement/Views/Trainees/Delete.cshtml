@model CapstoneTraineeManagement.DTO.Trainee

@{
    ViewData["Title"] = "Delete Trainee";
    bool hasActiveEnrollments = ViewData["HasActiveEnrollments"] as bool? ?? false;
}

<h1>Delete Confirmation</h1>

@if (hasActiveEnrollments)
{
    <div class="alert alert-danger">
        <h3>Cannot Delete Trainee</h3>
        <p>This action cannot be performed because <strong>@Model.FullName</strong> has active enrollments.</p>
    </div>
}
else
{
    <h3>Are you sure you want to permanently delete this trainee?</h3>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TraineeId" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>