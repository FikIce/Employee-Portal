@model CapstoneTraineeManagement.DTO.Trainee

@{
    ViewData["Title"] = "Trainee Details";
}

<h1>Trainee Details</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        @if (!string.IsNullOrEmpty(Model.ProfilePhotoFileName))
        {
            <img src="~/uploads/@Model.ProfilePhotoFileName" class="img-fluid rounded shadow-sm mb-3" alt="Profile Photo" />

            <p class="text-muted small">
                <strong>File:</strong> @Model.ProfilePhotoFileName
            </p>
        }
        else
        {
            <div class="border rounded text-center p-5 bg-light">
                <i class="fas fa-user fa-4x text-muted"></i>
                <p class="mt-2 text-muted">No Photo Uploaded</p>
            </div>
        }

        @if (!string.IsNullOrEmpty(Model.ResumeFileName))
        {
            <div class="d-grid mt-3">
                <a href="~/uploads/@Model.ResumeFileName" class="btn btn-outline-primary" target="_blank">
                    <i class="fas fa-file-alt me-2"></i> View Resume
                </a>
            </div>
        }
    </div>

    <div class="col-md-8">
        <div class="card">
            <div class="card-header"><h4 class="mb-0">@Model.FullName</h4></div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-4">Identity No</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.IdentityNo)</dd>

                    <dt class="col-sm-4">Date of Birth</dt>
                    <dd class="col-sm-8">@Model.Dob.ToShortDateString()</dd>

                    <dt class="col-sm-4">Email</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Email)</dd>

                    <dt class="col-sm-4">Contact No</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.ContactNo)</dd>

                    <dt class="col-sm-4">Address</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                    <dt class="col-sm-4">State</dt>
                    <dd class="col-sm-8">@Model.StateLookUp?.ValueCode</dd>

                    <dt class="col-sm-4">Trainee Category</dt>
                    <dd class="col-sm-8">@Model.CategoryLookUp?.ValueCode</dd>

                    <dt class="col-sm-4">Program Preference</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Preference)</dd>

                    <dt class="col-sm-4">Working Experience</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.WorkingExperience)</dd>

                    <dt class="col-sm-4">Remarks</dt>
                    <dd class="col-sm-8">@Html.DisplayFor(model => model.AdditonalNote)</dd>
                </dl>
            </div>
        </div>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.TraineeId" class="btn btn-warning">Edit This Trainee</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>