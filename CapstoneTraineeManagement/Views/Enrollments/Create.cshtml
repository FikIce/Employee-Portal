@model CapstoneTraineeManagement.Models.EnrollmentViewModel

@{
    ViewData["Title"] = "Create New Enrollment";
}

<h1>Create New Enrollment</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="EnrolledTraineeId" class="control-label"></label>
                <select asp-for="EnrolledTraineeId" class="form-control" asp-items="Model.Trainees">
                    <option value="">-- Select Trainee --</option>
                </select>
                <span asp-validation-for="EnrolledTraineeId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EnrolledProgramId" class="control-label"></label>
                <select asp-for="EnrolledProgramId" class="form-control" asp-items="Model.Programs">
                    <option value="">-- Select Program --</option>
                </select>
                <span asp-validation-for="EnrolledProgramId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EnrolledDate" class="control-label"></label>
                <input asp-for="EnrolledDate" class="form-control" />
                <span asp-validation-for="EnrolledDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="StatusLookUpId" class="control-label"></label>
                <select asp-for="StatusLookUpId" class="form-control" asp-items="Model.Statuses">
                    <option value="">-- Select Status --</option>
                </select>
                <span asp-validation-for="StatusLookUpId" class="text-danger"></span>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}