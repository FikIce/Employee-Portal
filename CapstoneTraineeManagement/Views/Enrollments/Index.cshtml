@model IEnumerable<CapstoneTraineeManagement.DTO.Enrollment>

@{
    ViewData["Title"] = "Enrollment Management";
    var programList = ViewData["Programs"] as SelectList;
    var resultCount = Model.Count();
}

<div class="d-flex justify-content-between align-items-center">
    <div>
        <h1>Enrollment Management</h1>
        <p class="text-muted">
            Displaying @resultCount result@(resultCount == 1 ? "" : "s").
        </p>
    </div>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus"></i> Create New Enrollment
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="card mb-4">
    <div class="card-body">
        <form asp-action="Index" method="get">
            <div class="row g-2 align-items-end">
                <div class="col-md-5">
                    <label for="programId" class="form-label">Filter by Program</label>
                    <select name="programId" id="programId" class="form-select" asp-items="programList">
                        <option value="">All Programs</option>
                    </select>
                </div>
                <div class="col-md-auto">
                    <button type="submit" class="btn btn-info">Filter</button>
                </div>
                <div class="col-md-auto">
                    <a asp-action="Index" class="btn btn-secondary">Clear Filter</a>
                </div>
            </div>
        </form>
    </div>
</div>


<div class="table-responsive">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Trainee Name</th>
                <th>Program Name</th>
                <th>Enrollment Date</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.EnrolledTrainee?.FullName</td>
                    <td>@item.EnrolledProgram?.Name</td>
                    <td>@item.EnrolledDate.ToShortDateString()</td>
                    <td>
                        <span class="badge bg-info">@item.StatusLookUp?.ValueCode.ToUpper()</span>
                    </td>
                    <td class="text-end">
                        <a asp-action="Edit" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-warning">Edit Status</a>
                        <a asp-action="Details" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-info">View</a>
                        @if (item.StatusLookUp?.ValueCode == "New")
                        {
                            <a asp-action="Delete" asp-route-id="@item.EnrollmentId" class="btn btn-sm btn-danger">Delete</a>
                        }   
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>